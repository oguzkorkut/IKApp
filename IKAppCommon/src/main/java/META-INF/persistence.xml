<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
						   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
						   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="IKAppCommon"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.okorkut.ik.common.entity.Application</class>
		<class>com.okorkut.ik.common.entity.Education</class>
		<class>com.okorkut.ik.common.entity.Experience</class>
		<class>com.okorkut.ik.common.entity.Language</class>
		<class>com.okorkut.ik.common.entity.Position</class>
		<class>com.okorkut.ik.common.entity.Profile</class>
		<class>com.okorkut.ik.common.entity.Reference</class>
		<class>com.okorkut.ik.common.entity.Role</class>
		<class>com.okorkut.ik.common.entity.RoleGroup</class>
		<class>com.okorkut.ik.common.entity.User</class>
		<properties>
        	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
   		</properties>
	</persistence-unit>
</persistence>
